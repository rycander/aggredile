<div class='auth-page'>
  <div class='auth-holder'>
    <% if flash[:errors] %>
      <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>

    <form class="form-signin" action="<%= users_url %>" method="post">
      <h2 class="form-signin-heading">Welcome to Aggredile</h2>
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <input type="text"
             class="form-control"
             placeholder="Username"
             name="user[username]"
             id="user_username"
             value="<%= @user.username %>"
             required autofocus>

      <input type="password"
             class="form-control"
             placeholder="Password"
             name="user[password]"
             id="user_password"
             required>
      <br>

      <input type="submit"
             class="button btn-lg btn-primary btn-block">
    </form>

      Already have an account?
      <br>
      <%= link_to "Sign In", new_session_url %> or
      <br>
      <%= link_to "Sign in as Guest", new_guest_url %>
  </div>
</div>
